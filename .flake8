[flake8]
# Configuration for flake8 linter

# Maximum line length (match Black's default)
max-line-length = 88

# Maximum cyclomatic complexity
max-complexity = 10

# Ignore specific errors
extend-ignore =
    # E203: whitespace before ':' (conflicts with Black)
    E203,
    # W503: line break before binary operator (conflicts with Black)
    W503,
    # E501: line too long (handled by Black)
    E501,
    # D100: Missing docstring in public module (optional)
    D100,
    # D104: Missing docstring in public package (optional)
    D104

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .tox,
    .eggs,
    *.egg-info,
    build,
    dist,
    .venv,
    venv,
    docs

# Per-file ignores
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401,F403
    # Allow star imports in __init__.py
    __init__.py:F405
    # Tests can have longer functions
    tests/*:D

# Enable specific checks
select =
    # pycodestyle errors
    E,
    # pycodestyle warnings
    W,
    # pyflakes
    F,
    # mccabe complexity
    C,
    # pep8-naming
    N,
    # flake8-bugbear
    B

# Docstring conventions (NumPy style)
docstring-convention = numpy

# Count errors
count = True

# Show source code for errors
show-source = True

# Print total number of errors
statistics = True
